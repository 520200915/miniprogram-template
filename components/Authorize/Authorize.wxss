/* components/Authorize/Authorize.wxss */
.open-seting-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999999999;
}
.open-set-inner {
  width: 400rpx;
  height: 220rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
   z-index: 9999999999;
}

.btn-openset {
  display: flex;
  font-size: 30rpx;
  height: 100rpx;
}

.set-title {
  font-size: 30rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn{
  flex: 1;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button-style {
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  opacity: 0;
  top: 0;
  left: 0;
}


