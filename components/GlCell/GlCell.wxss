/* components/GlCell/GlCell.wxss */
.cell-box {
  background: #fff;
  font-size: 28rpx;
  color: #333333;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.cell {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.cell.border {
  border-bottom: 2rpx solid #eee;
}

.cell-label {
  width: 25%;
}

.cell-value {
  width: 75%;
  position: relative;
  height: 100%;
}

.cell-value .false {
  padding-right: 40rpx !important;
}

.value {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-right: 70rpx;
	box-sizing: border-box;
}
.required{
  color: #f00;
}
.details{
  display: none;
}
.slot:empty + .details{
  display: block;
}
.cell-value .right {
  justify-content: flex-end;
  height: 100%;
  box-sizing: border-box;
}
.slot{
  width: 100%;
}
.slot:empty{
  display: none;
}
.arrow {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 28rpx;
  height: 26rpx;
}
