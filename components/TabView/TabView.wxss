/* components/tabView/tabView.wxss */

.tab {
  float: left;
  width: 26.67%;
  box-sizing: border-box;
  text-align: center;
  background: #f4f4f4;
}

.view {
  float: left;
  width: 73.33%;
  height: 100%;
  position: relative;
}

.tab-item {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.active {
  font-weight: 700;
  background: #fff;
  position: sticky;
  top: 0;
  font-size: 28rpx;
}
