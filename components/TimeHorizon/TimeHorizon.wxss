/* components/TimeHorizon/TimeHorizon.wxss */
.time-box {
  background: #fff;
  font-size: 28rpx;
  color: #333333;
}

.time-picker {
  padding-left: 40rpx;
}

.time-picker-view {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}
.time-picker-label{
  width: 25%;
  box-sizing: border-box;
}
.time-picker-value{
  width: 75%;
  display: flex;
  align-items: center;
  position: relative;
}
.time-picker-value.right{
  justify-content: flex-end;
  padding-right: 70rpx;
}
.no-data {
  color: #999;
}
.arrow {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 28rpx;
  height: 26rpx;
}
